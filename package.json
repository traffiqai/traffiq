{
  "name": "traffiq",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run db:prepare",
    "build": "npm run build --workspaces",
    "predeploy": "echo 'Database operations handled by SST pre-deploy hooks'",
    "deploy": "sst deploy",
    "predeploy:dev": "echo 'Database operations handled by SST pre-deploy hooks'",
    "deploy:dev": "sst deploy --stage dev",
    "predeploy:prod": "echo 'Database operations handled by SST pre-deploy hooks'",
    "deploy:prod": "sst deploy --stage production",
    "prestart": "npm run db:prepare",
    "start": "rm -rf .sst && cd packages/dashboard && rm -rf .next .open-next && cd ../landing && rm -rf .next .open-next && cd ../.. && npx sst dev --stage dev",
    "prestart:prod": "npm run db:prepare",
    "start:prod": "npx sst dev --stage production",
    "db:prepare": "cd packages/database && npm run db:generate && npm run build",
    "db:generate": "cd packages/database && npm run db:generate",
    "db:push": "./scripts/db-push.sh",
    "db:push:staging": "SST_STAGE=staging ./scripts/db-push.sh",
    "db:push:prod": "SST_STAGE=production ./scripts/db-push.sh",
    "db:migrate": "./scripts/db-migrate.sh",
    "db:migrate:staging": "SST_STAGE=staging ./scripts/db-migrate.sh",
    "db:migrate:prod": "SST_STAGE=production ./scripts/db-migrate.sh",
    "db:studio": "./scripts/db-studio.sh",
    "db:studio:staging": "SST_STAGE=staging ./scripts/db-studio.sh",
    "db:studio:prod": "SST_STAGE=production ./scripts/db-studio.sh",
    "sst": "sst"
  },
  "workspaces": [
    "packages/*"
  ],
  "author": "",
  "license": "ISC",
  "description": "",
  "engines": {
    "node": "20.x"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.157",
    "@types/node": "^20.17.0",
    "sst": "^3.9.28",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "sst": "3.17.21",
    "tailwindcss": "^3.4.3"
  }
}
